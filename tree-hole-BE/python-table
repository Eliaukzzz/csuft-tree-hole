# 导入pymysql模块
import pymysql
# 连接database
conn = pymysql.connect(host="127.0.0.1",user="root",password="123456",database="firstdb",charset="utf8")
# 得到一个可以执行SQL语句的光标对象
cursor = conn.cursor()
# 定义要执行的SQL语句
sql = """
CREATE TABLE USER (
    Id varchar(30) not null primary key,
    Name varchar(30) not null,
    Email varchar(30) not null,
    Password varchar(30) not null,
    Avater longblob
)ENGINE=innodb DEFAULT CHARSET=utf8;
"""
# 执行SQL语句
cursor.execute(sql)
# 关闭光标对象
cursor.close()
# 关闭数据库连接
conn.close()
